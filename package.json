{
  "name": "notewizard",
  "version": "0.1.6",
  "type": "module",
  "description": "NoteWizard Installer",
  "license": "MIT License",
  "author": "NoteWizard Team",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "nodemon --watch main.js --watch src --exec electron .",
    "dist": "node build.js",
    "dist:win": "electron-builder --win --x64",
    "dist:mac": "electron-builder --mac --x64 --arm64",
    "dist:linux": "electron-builder --linux",
    "dist:all": "electron-builder -wml",
    "generate-icons": "node scripts/generate-icons.js",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "codemirror": "^5.65.16",
    "icon-gen": "^5.0.0",
    "marked": "^12.0.2",
    "mkdirp": "^3.0.1",
    "node-fetch": "^2.7.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "electron": "^37.4.0",
    "electron-builder": "^24.13.3",
    "electron-reload": "^1.5.0",
    "nodemon": "^3.0.2",
    "rimraf": "^6.0.1"
  },
  "build": {
    "appId": "com.app.notewizard",
    "productName": "NoteWizard",
    "artifactName": "NoteWizard_${version}_${os}_${arch}_Setup.${ext}",
    "copyright": "Copyright Â© 2025 ${author}",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "compression": "maximum",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/logo/app-logo.ico",
      "publisherName": "NoteWizard",
      "verifyUpdateCodeSignature": false,
      "signingHashAlgorithms": [
        "sha1",
        "sha256"
      ]
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "src/assets/logo/app-logo.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": null,
      "entitlementsInherit": null
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ],
      "window": {
        "width": 540,
        "height": 400
      }
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "rpm",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "src/assets/logo/app-logo-512.png",
      "category": "Office",
      "maintainer": "NoteWizard Team",
      "vendor": "NoteWizard",
      "synopsis": "A powerful note-taking application",
      "description": "NoteWizard is a modern, feature-rich note-taking application for organizing your thoughts and ideas."
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "NoteWizard",
      "uninstallDisplayName": "NoteWizard",
      "deleteAppDataOnUninstall": true
    },
    "files": [
      "**/*",
      "!**/node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!**/node_modules/*/{test,__tests__,tests,powered-test,example,examples}",
      "!**/node_modules/.bin",
      "!**/*.{o,hprof,orig,pyc,pyo,rbc,swp,csproj,sln,xproj}",
      "!.editorconfig",
      "!**/._*",
      "!**/{.DS_Store,.git,.hg,.svn,CVS,RCS,SCCS,.gitignore,.gitattributes}",
      "!**/{__pycache__,thumbs.db,.flowconfig,.idea,.vs,.nyc_output}",
      "!**/{appveyor.yml,.travis.yml,circle.yml}",
      "!**/{npm-debug.log,yarn.lock,.yarn-integrity,.yarn-metadata.json}"
    ],
    "asar": true,
    "asarUnpack": [
      "**/node_modules/codemirror/**",
      "**/node_modules/marked/**"
    ]
  }
}
